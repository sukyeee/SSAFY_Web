	}catch( error ){
		console.log(error);
		alert('ì´ë²¤íŠ¸ ì¡°íšŒ ê³¼ì •ì—ì„œ ë¬¸ì œê°€ ìƒê²¼ìŠµë‹ˆë‹¤.')
